
#include <iostream>
#include <cctype>

using namespace std;

int main() {
    
    string str = "A man a plan a canal Panama";
    int i = 0;
    int j = str.length()-1;
    
    bool isPalindrome = true;
    
    while(i<j){
        
        while(i<j && str[i]==' ') i++;
        while(i<j && str[j]==' ') j--;
    
        if(tolower(str[i])!=tolower(str[j])){
            
            isPalindrome = false;
            break;
        }
        i++;
        j--;
    }
    
    if(isPalindrome){
        cout<<"Its a Palindrome"<<endl;
    }
    else{
        cout<<"Not a Palindrome"<<endl;
    }
   
    return 0;
}
