// Online C++ compiler to run C++ program online
#include <iostream>

using namespace std;

int main() {
    
    string str = "I love Japan";
    int len = str.length();
    
    for(int i=0;i<len/2;i++){
        
        char rev = str[i];
        str[i] = str[len-i-1];
        str[len-i-1] = rev;
    }
    
    cout<<"The reversed string is "<<str<<endl;

    return 0;
}
